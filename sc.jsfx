
desc: Shadowcast Mono-stereo decoder
author: micsthepick

slider1:0<0,1,1{Off, On}>Swap stereo channels

@sample

new = spl0;

toggle > 0.5 ? (
	toggle = 0;
	slider1 > 0.5 ? (
		spl0 = oldold;
		spl1 = old;
	) : (
		spl1 = oldold;
		spl0 = old;
	);
) : (
	toggle = 1;
	slider1 > 0.5 ? (
		spl1 = oldold;
		spl0 = old;
	) : (
		spl0 = oldold;
		spl1 = old;
	);
);
oldold = old;
old = new;
