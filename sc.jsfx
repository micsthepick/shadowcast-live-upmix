desc: Shadowcast Mono-stereo decoder
author: micsthepick

slider1:0<0,1,1{Off, On}>Swap stereo channels
slider2:0<0,0,-1>Detected Samplerate (expect 96000)

in_pin:
out_pin:
out_pin:

@block
slider2 = srate;

@sample

new = spl0;

toggle > 0.5 ? (
  toggle = 0;
  slider1 > 0.5 ? (
    spl0 = old;
    spl1 = new;
  ) : (
    spl1 = old;
    spl0 = new;
  );
) : (
  toggle = 1;
  slider1 > 0.5 ? (
    spl1 = old;
    spl0 = new;
  ) : (
    spl0 = old;
    spl1 = new;
  );
);
old = new;
